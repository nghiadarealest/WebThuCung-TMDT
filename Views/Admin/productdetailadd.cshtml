@model ProductDetail

<div class="modal fade bd-example-modal-lg" id="productdetail-add" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Thêm chi tiết sản phẩm</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form asp-action="Add" method="post" id="productdetail-add-form" enctype="multipart/form-data">
                    <div class="row">
                        <div class="col">
                            <div class="form-group">
                                <label>Sản phẩm</label>
                                <select class="form-control" name="ProductId" asp-for="ProductId" asp-items="@(new SelectList(ViewBag.Products ?? new List<Product>(), "ProductId", "ProductName"))" required>
                                    <option value="">Chọn sản phẩm</option>
                                </select>
                            </div>
                        </div>
                        <div class="col">
                            <div class="form-group">
                                <label>Tuổi</label>
                                <input type="text" class="form-control" placeholder="Nhập tuổi (tính theo tháng)" name="NiTay" asp-for="NiTay" required>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col">
                            <div class="form-group">
                                <label>Nguồn gốc</label>
                                <input type="text" class="form-control" placeholder="Nhập nguồn gốc" name="KieuDang" asp-for="KieuDang" required>
                            </div>
                        </div>
                        <div class="col">
                            <div class="form-group">
                                <label>Sức khỏe</label>
                                <input type="text" class="form-control" placeholder="Nhập tình trạng sức khỏe" name="KieuVienChu" asp-for="KieuVienChu" min="0" required title="Kích thước không được âm">
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col">
                            <div class="form-group">
                                <label>Tiêm phòng</label>
                                <input type="text" class="form-control" placeholder="Số mũi Tiêm phòng" name="KichThuocVienChu" asp-for="KichThuocVienChu" required>
                            </div>
                        </div>
                        <div class="col">
                            <div class="form-group">
                                <label>Giới tính</label>
                                <select class="form-control" name="GioiTinh" asp-for="GioiTinh" required>
                                    <option value="">Chọn giới tính</option>
                                    <option value="Nam">Nam</option>
                                    <option value="Nữ">Nữ</option>
                                </select>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col">
                            <div class="form-group">
                                <label>Vận chuyển</label>
                                <input type="text" class="form-control" placeholder="Nhập chi phí vận chuyển" name="MauKimLoai" asp-for="MauKimLoai" required>
                            </div>
                        </div>
                        <div class="col">
                            <div class="form-group">
                                <label>Tình trạng</label>
                                <input type="text" class="form-control" placeholder="Nhập tình trạng" name="DaTam" asp-for="DaTam" required>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col">
                            <div class="form-group">
                                <label>Đặc điểm</label>
                                <textarea class="form-control" placeholder="Nhập thông tin khác" name="Others" asp-for="Others"></textarea>
                            </div>
                        </div>
                    </div>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-outline-secondary" data-dismiss="modal" style="border-radius: 20px;">Đóng</button>
                        <button type="submit" class="btn btn-outline-primary" style="border-radius: 20px;">Lưu thay đổi</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>