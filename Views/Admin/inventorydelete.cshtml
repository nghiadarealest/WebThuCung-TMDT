@model Inventory

<div class="modal fade" id="inventory-delete-@Model.InventoryId" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Xác nhận xóa</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form asp-action="delete" method="post" id="inventory-@Model.InventoryId-delete">
                    <input type="hidden" name="InventoryId" asp-for="InventoryId">
                    <label>Bạn có chắc chắn muốn xóa sản phẩm trong kho với ID **@Model.InventoryId** không?</label>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-secondary" data-dismiss="modal" style="border-radius: 20px;">Đóng</button>
                <button type="submit" class="btn btn-outline-danger" style="border-radius: 20px;" form="inventory-@Model.InventoryId-delete">Đồng ý</button>
            </div>
        </div>
    </div>
</div>
