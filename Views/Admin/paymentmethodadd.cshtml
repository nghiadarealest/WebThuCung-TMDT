@model _123.Models.PaymentMethod

<div class="modal fade bd-example-modal-lg" id="payment-method-add" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Create Payment Method</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form asp-action="Add" method="post" id="payment-method-form">
                    @* <input type="hidden" name="PaymentMethodId" asp-for="PaymentMethodId"> *@

                    <!-- Payment Method Name -->
                    <div class="form-group">
                        <label>Payment Method Name</label>
                        <input type="text" class="form-control" placeholder="Enter payment method name" name="PaymentMethodName" asp-for="PaymentMethodName" required>
                    </div>

                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-secondary" data-dismiss="modal" style="border-radius: 20px;">Đóng</button>
                <button type="submit" class="btn btn-outline-primary" style="border-radius: 20px;" form="payment-method-form">Lưu</button>
            </div>
        </div>
    </div>
</div>
