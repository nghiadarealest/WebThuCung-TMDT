@model ProductDetail

<div class="modal fade" id="productdetail-delete-@Model.ProductDetailId" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">Xóa chi tiết sản phẩm</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>Bạn có chắc muốn xóa chi tiết sản phẩm này không?</p>
                <p><strong>Sản phẩm:</strong> @Model.Product?.ProductName</p>
                <p><strong>Tuổi:</strong> @Model.NiTay</p>
                <p><strong>Nguồn gốc:</strong> @Model.KieuDang</p>
            </div>
            <div class="modal-footer">
                <form asp-action="Delete" method="post" id="productdetail-delete-form-@Model.ProductDetailId">
                    <input type="hidden" name="ProductDetailId" asp-for="ProductDetailId">
                    <button type="button" class="btn btn-outline-secondary" data-dismiss="modal" style="border-radius: 20px;">Hủy</button>
                    <button type="submit" class="btn btn-outline-danger" style="border-radius: 20px;">Xóa</button>
                </form>
            </div>
        </div>
    </div>
</div>
