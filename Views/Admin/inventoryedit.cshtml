@model Inventory

<div class="modal fade bd-example-modal-lg" id="inventory-@Model.InventoryId" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Cập nhật Tồn kho</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form asp-action="edit" method="post" id="inventory--@Model.InventoryId">
                    <input type="hidden" name="InventoryId" asp-for="InventoryId">
                    <div class="row">
                        <div class="col">
                            <div class="form-group">
                                <label>Mã sản phẩm</label>
                                <input type="text" class="form-control" placeholder="Nhập mã sản phẩm" name="ProductId" asp-for="ProductId" readonly>
                            </div>
                        </div>
                        <div class="col">
                            <div class="form-group">
                                <label>Số lượng tồn kho</label>
                                <input type="number" class="form-control" placeholder="Nhập số lượng tồn kho" name="QuantityInStock" asp-for="QuantityInStock">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <div class="form-group">
                                <label>Ngày cập nhật</label>
                                <input type="datetime-local" class="form-control" name="LastUpdated" asp-for="LastUpdated" value="@Model.LastUpdated.ToString("yyyy-MM-ddTHH:mm")">
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-secondary" data-dismiss="modal" style="border-radius: 20px;">Đóng</button>
                <button type="submit" class="btn btn-outline-primary" style="border-radius: 20px;" form="inventory--@Model.InventoryId">Lưu thay đổi</button>
            </div>
        </div>
    </div>
</div>
