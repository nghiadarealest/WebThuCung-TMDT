    <script>
  // Lưu tham chiếu đến các phần tử dropdown
  const dropdownToggles = document.querySelectorAll('.dropdown-toggle');

  // Thêm sự kiện click cho từng nút dropdown-toggle
  dropdownToggles.forEach(toggle => {
    toggle.addEventListener('click', (event) => {
      // Ngăn chặn sự kiện click lan ra ngoài
      event.stopPropagation();

      // Lấy phần tử drop-item liên quan
      const dropItem = toggle.nextElementSibling;

      // Toggle hiển thị của drop-item
      if (dropItem) {
        const isVisible = dropItem.style.display === 'block';
        hideAllDropdowns(); // Ẩn tất cả dropdown khác trước
        dropItem.style.display = isVisible ? 'none' : 'block';
      }
    });
  });

  // Ẩn tất cả các menu drop-item
  function hideAllDropdowns() {
    document.querySelectorAll('.drop-item').forEach(item => {
      item.style.display = 'none';
    });
  }

  // Ẩn menu khi click ra ngoài
  document.addEventListener('click', () => {
    hideAllDropdowns();
  });

